# Argus 示例配置

# 服务监听
ARGUS_HOST=127.0.0.1
ARGUS_PORT=8890

# 注册到 ServiceAtlas（建议开启，以便 Hermes 自动路由）
ARGUS_REGISTRY_ENABLED=true
ARGUS_REGISTRY_URL=http://127.0.0.1:8888
ARGUS_SERVICE_HOST=127.0.0.1
ARGUS_SERVICE_PORT=8890
ARGUS_HEARTBEAT_INTERVAL=30

# 认证声明（由 Hermes 代理路由时生效）
ARGUS_REQUIRE_AUTH=true
ARGUS_AEGIS_SERVICE_ID=aegis

# 存储与采样
ARGUS_DB_PATH=./argus.db
ARGUS_SAMPLING_INTERVAL_SECONDS=2
ARGUS_RETENTION_DAYS=7

# CPU 温度选源（可选）
# 直接指定 sysfs 路径（优先级最高）
# ARGUS_CPU_TEMP_SYSFS_PATH=/sys/class/hwmon/hwmon3/temp1_input
# 自动选源时的偏好（子串匹配）
# ARGUS_CPU_TEMP_PREFERRED_CHIP=coretemp
# ARGUS_CPU_TEMP_PREFERRED_LABEL=package
# 自动选源最低可信分（默认 80；越高越严格，可能返回 None）
# ARGUS_CPU_TEMP_MIN_SCORE=80

# GPU（可选）
ARGUS_GPU_ENABLED=true
ARGUS_GPU_INDEX=0
